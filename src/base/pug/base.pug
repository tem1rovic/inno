include ../../mixins/pug/svg-icon
block variables
    -
        var baseDir = './';

doctype html
html(lang="ru")
    //- Include head
    include ./head

    body(class=pageClass)
        .page
            .page__content
                //- Include header
                include ../../components/header/header

                if (pageClass !== 'homepage')
                    nav.breadcrumbs.mb-sm-30
                        .container
                            ul.breadcrumbs__list
                                li
                                    a(href="/") Главная
                                    span.breadcrumbs__divider /

                                li.is-active #{title}

                block top-position

                .container
                    .row
                        block columns

                block bottom-position

            //- Include footer
            include ../../components/footer/footer

        //- Include callback modal
        include ../../components/form/form--callback

        a.go-top.go-top--js(href='#')
            +icon('arrow-up')

        script(src=`${baseDir}js/main.js`)

        block script
